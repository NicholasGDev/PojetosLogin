<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_bg"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="408dp"
        android:layout_height="210dp"
        android:layout_marginTop="90dp"
        android:src="@drawable/ic_android_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/et_border"
            android:hint="Username"
            android:padding="10dp"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/et_border"
            android:hint="Pssword"
            android:padding="10dp"
            android:textColorHint="#FFFFFF"
            android:textSize="20dp" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Remeber me"
            android:textColor="#FFFF" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/botao_um"
            android:text="Login In"
            android:textAllCaps="false"
            android:textColor="#A66774" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/botao_dois"
            android:onClick="abrirCad"
            android:text="Sing Up"
            android:textAllCaps="false"
            android:textColor="#FFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot your Password?"
            android:textColor="#FFFF"
            android:textSize="20dp" />
    </LinearLayout>

</LinearLayout>